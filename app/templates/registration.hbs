<h1 class="padding-top">Registration!</h1>

<hr class="restrict">

<div class="col-md-6">

  {{#if errorMessage}}
    <div class="alert alert-danger">{{errorMessage}}</div>
  {{/if}}

  <form role="form" {{action register on="submit"}} >
      
      <div class="form-group">
          <label for="r-user-email">Enter you email here</label>
          {{input value=email  class="form-control" id="r-user-email" placeholder="Email" type="email"}}
      </div>

      <div class="form-group">
          <label for="r-user-password">And password here</label>
          {{input value=password type="password" class="form-control" id="r-user-password" placeholder="Password" type="password"}}
      </div>

      <button type="submit" class="btn btn-default">Register!</button>

  </form>

</div>